@model Gambl.Models.UserInfo

<!-- Bootstrap CSS -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header text-center" style="background-color: #1E56A0; color: #ffffff;">
                    <h2>Sign Up</h2>
                </div>
                <div class="card-body">
                    <form asp-action="SignUp" method="post">
                        <!-- First Name -->
                        <div class="form-group">
                            <label for="UserFN">First Name</label>
                            <input asp-for="UserFN" class="form-control" placeholder="Enter your first name" />
                            <span asp-validation-for="UserFN" class="text-danger"></span>
                        </div>

                        <!-- Last Name -->
                        <div class="form-group">
                            <label for="UserLN">Last Name</label>
                            <input asp-for="UserLN" class="form-control" placeholder="Enter your last name" />
                            <span asp-validation-for="UserLN" class="text-danger"></span>
                        </div>

                        <!-- Email -->
                        <div class="form-group">
                            <label for="UserEmail">Email</label>
                            <input asp-for="UserEmail" type="email" class="form-control" placeholder="Enter your email" />
                            <span asp-validation-for="UserEmail" class="text-danger"></span>
                        </div>

                        <!-- Phone -->
                        <div class="form-group">
                            <label for="UserPhone">Phone</label>
                            <input asp-for="UserPhone" type="tel" class="form-control" placeholder="Enter your phone number" />
                            <span asp-validation-for="UserPhone" class="text-danger"></span>
                        </div>

                        <!-- Password -->
                        <div class="form-group">
                            <label for="Password">Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-primary btn-block" style="background-color: #1E56A0; color: #ffffff;">Sign Up</button>
                    </form>
                </div>


                <!-- Back to Login Link -->
                <div class="card-footer text-center">
                    <a asp-controller="Login" asp-action="Admission" class="text-primary">Back to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS (optional) -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

@model InstructorInfo

@Model.InstructorFN @Model.InstructorLN 

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        .container {
            display: grid;
            grid-template-columns: 1fr 1fr 1fr;
            gap: 10px; 
            margin-top: 20px; 
        }

        .box {
            background-color: lightgray;
            text-align: center;
            padding: 10px;
            box-sizing: border-box;
        }

        .box-1, .box-2, .box-3 {
            background-color: #f9f9f9;
            padding: 20px;
            border-radius: 8px;
        }

        .ins-img{
            width: 200px;
            height: 200px;
            object-fit: cover;
            border-radius: 50%;

        }

        .box-3 {
            display: grid;
            grid-template-rows: 2fr 1fr;
            gap: 10px; 
        }

        .list {
            text-align: left;
            font-size: 1em;
            line-height: 1.5;
            color: #333;
            padding: 10px;
            background-color: #fff;
            border-radius: 8px;
        }

        .list li {
            margin-bottom: 10px;
        }

        .list h3 {
            margin-bottom: 15px;
            font-size: 1.2em;
            color: #444;
        }

        .social-buttons {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 0; 
        }

        .social-button {
            display: inline-block;
            width: 40px; 
            height: 40px; 
            background-color: #e0e0e0;
            text-align: center;
            line-height: 40px;
            font-size: 20px; 
            color: #fff;
            text-decoration: none;
            margin-right: 0px; 
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        }

        
        .social-button.youtube { background-color: #ff0000; }
        .social-button.linkedin { background-color: #0077b5; }
        .social-button.x { background-color: #1da1f2; }

        .social-button:hover {
            opacity: 0.8; 
        }

        
        .social-button i {
            font-size: 20px;
            color: #fff; 
        }

       
        .container {
            margin: 0 auto;
            max-width: 1200px;
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        
        <div class="box box-1">
            <img src="https://via.placeholder.com/100" alt="Resim" class="ins-img"> 
            <div class="info">
                <div class="name" style="font-size: 1.5em; font-weight: bold;">John Doe</div> 
                <div class="profession" style="font-size: 1.2em; color: #555;">Software Engineer</div>
            </div>
        </div>

        
        <div class="box box-2">
            <div class="about-me">
                <h3>About Me</h3>
                <p>
                    Hi, I'm a software developer passionate about building creative and innovative solutions. 
                    I enjoy coding, learning new technologies, and collaborating with others to create impactful projects.
                </p>
            </div>
            <div class="buttons">
                <button class="button" style="padding: 10px 20px; background-color: #007bff; color: white; border: none; border-radius: 8px; font-size: 1.1em;">42</button>
                <button class="button" style="padding: 10px 20px; background-color: #28a745; color: white; border: none; border-radius: 8px; font-size: 1.1em;">99</button>
            </div>
        </div>

        
        <div class="box box-3">
           
            <div class="list">
                <h3>My Goals</h3>
                <ul>
                    <li>Learn new programming languages</li>
                    <li>Build impactful projects</li>
                    <li>Collaborate with talented individuals</li>
                </ul>
            </div>

           
            <div class="social-buttons">
                <a href="https://youtube.com" class="social-button youtube" target="_blank" title="YouTube"><i class="fab fa-youtube"></i></a>
                <a href="https://linkedin.com" class="social-button linkedin" target="_blank" title="LinkedIn"><i class="fab fa-linkedin"></i></a>
                <a href="https://twitter.com" class="social-button x" target="_blank" title="X"><i class="fab fa-twitter"></i></a>
            </div>
        </div>
    </div>
</body>
</html>